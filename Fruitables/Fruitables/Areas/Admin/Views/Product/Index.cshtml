@model List<GetProductVM>
@{
    int count = 0;
}

<div class="col-lg-12 stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Products</h4>
            <a class="btn btn-success" asp-action="Create"> Create </a>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                No
                            </th>
                            <th>
                                Image
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Price
                            </th>
                            <th>
                                Category
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (GetProductVM productVM in Model)
                        {
                            <tr class="table-info">
                                <td>
                                    @count
                                </td>
                                <td>
                                    <img src="~/img/@productVM.MainImage" />
                                </td>
                                <td>
                                    @productVM.Name
                                </td>
                                <td>
                                    @productVM.Price
                                </td>
                                <td>
                                    @productVM.CategoryName
                                </td>
                                <td>
                                    <a asp-action="update" asp-route-id="@productVM.Id" class="btn btn-info"> <i class="mdi mdi-pencil-box"></i></a>
                                    <a asp-action="delete" asp-route-id="@productVM.Id" class="btn btn-danger"><i class="mdi mdi-delete-forever"></i></a>
                                    <a asp-action="detail" asp-route-id="@productVM.Id" class="btn btn-primary"><i class="mdi mdi-open-in-new"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
