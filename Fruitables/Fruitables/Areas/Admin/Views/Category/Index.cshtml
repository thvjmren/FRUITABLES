@model List<Category>
@{
    int count = 0;
}

<div class="col-lg-12 stretch-card">
    <div class="card">
        <div class="card-body">
                <h4 class="card-title">Categories</h4>
            <a class="btn btn-success" asp-controller="Category" asp-action="Create"> Create </a>
            </p>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                No
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Product Count
                            </th>
                            <th>
                                Date
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Category category in Model)
                        {
                            <tr class="table-info">
                                <td>
                                    @count
                                </td>
                                <td>
                                    @category.Name
                                </td>
                                <td>
                                    @category.Products.Count
                                </td>
                                <td>
                                    @category.CreatedTime.ToString("d MMMM yyy HH:mm")
                                </td>
                                <td>
                                    <a asp-action="update" asp-route-id="@category.Id" class="btn btn-info"> <i class="mdi mdi-pencil-box"></i></a>
                                    <a asp-action="delete" asp-route-id="@category.Id" class="btn btn-danger"><i class="mdi mdi-delete-forever"></i></a>
                                    <a asp-action="detail" asp-route-id="@category.Id" class="btn btn-primary"><i class="mdi mdi-open-in-new"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
